{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "esnext",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "jsx": "preserve",
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": false,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "include": ["src/typings/twin.d.ts"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@auth/*": ["src/auth/*"],
      "@templates/*": ["src/templates/*"],
      "@helpers/*": ["src/helpers/*"],
      "@graphql/*": ["src/graphql/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@gatsby/*": ["src/gatsby/*"],
      "@typings/*": ["src/typings/*"],
      "@context/*": ["src/context/*"]
    }
  },

  "exclude": ["node_modules", "public", ".cache", "gatsby-config.js"]
}
